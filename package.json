{
  "name": "postcss-boilerplate",
  "version": "1.0.0",
  "description": "一个PostCSS脚手架",
  "license": "MIT",
  "keywords": [
    "css",
    "postcss"
  ],
  "scripts": {
    "build:css": "postcss src/main.css -d dist",
    "watch:css": "postcss src/main.css -d dist -m -w",
    "preprocess": "cssplus src/main.css dist/build.css"
  },
  "dependencies": {
    "cssnano": "^3.10.0",
    "postcss-import":  "^11.0.0",
    "postcss-url": "^7.1.2",
    "postcss-cssplus": "^1.1.0",
    "postcss-simple-reset": "^1.1.1",
    "postcss-bem-linter": "^3.1.0",
    "postcss-reporter": "^5.0.0",
    "stylelint": "^7.13.0",
    "stylelint-config-cssplus": "^1.0.2"
  },
  "devDependencies": {
    "postcss-cli": "^4.1.1",
    "cssplus-preprocessor": "^1.1.1"
  }
}
